<!DOCTYPE html>
<html>
<head>
    <title>Page Layout</title>
    <style>
        .head1 {
            font-size: 40px;
            color: #009900;
            font-weight: bold;
        }

        .head2 {
            font-size: 17px;
            margin-left: 10px;
            margin-bottom: 15px;
        }

        body {
            margin: 0 auto;
            background-position: center;
            background-size: contain;
            background-color: lightblue;
        }

        .menu {
            position: sticky;
            top: 0;
            background-color: darkslategray;
            padding: 10px 0px 10px 0px;
            color: white;
            margin: 0 auto;
            overflow: hidden;
        }

            .menu a {
                float: left;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 20px;
            }

        .menu-log {
            right: auto;
            float: right;
        }

        footer {
            width: 100%;
            bottom: 0px;
            background-color: #000;
            color: #fff;
            position: absolute;
            padding-top: 20px;
            padding-bottom: 50px;
            text-align: center;
            font-size: 30px;
            font-weight: bold;
        }

        .body_sec {
            margin-left: 20px;
        }
    </style>
</head>

<body>

    <!-- Header Section -->
      <header>
          <script>
              var isMyProfileClicked = false;
              var MyProfileName = "MyProfile";
          </script>
     </header> 

    <!-- Menu Navigation Bar -->
    <nav class="menu">
        <a href="/">HOME</a>
        <a href="#news">NEWS</a>
        <a href="#notification">Library</a>
        <a href="/search">Search</a>

        <div class="menu-log">
            <a href="users/login">MyProfileName</a>
            <script>
                isMyProfileClicked = true;
                MyProfileName = " ";
                document.write(MyProfileName);
            </script>
        </div>
    </nav>

    <!-- Body section -->
    <main class="body_sec">
        <section id="Content">
            <h3> [[RenderBody]]</h3>
        </section>
    </main>

    <!-- Footer Section -->
    <footer>Footer Section</footer>
</body>
</html>